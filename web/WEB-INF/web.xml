<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param>
        <param-name>encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>


    <servlet>
        <servlet-name>servletImpl</servlet-name>
        <servlet-class>com.test.project.servlet.ServletImpl</servlet-class>
        <!--        <load-on-startup>2</load-on-startup>-->
    </servlet>

    <servlet-mapping>
        <servlet-name>servletImpl</servlet-name>
        <url-pattern>/servletImpl</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>genericServletImpl</servlet-name>
        <servlet-class>com.test.project.servlet.GenericServletImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>genericServletImpl</servlet-name>
        <url-pattern>/demo2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>httpServletImpl</servlet-name>
        <servlet-class>com.test.project.servlet.HttpServletImpl</servlet-class>

        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>httpServletImpl</servlet-name>
        <url-pattern>/demo3</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servletDemo1</servlet-name>
        <servlet-class>com.test.project.servlet.ServletDemo1</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>servletDemo1</servlet-name>
        <url-pattern>/servletDemo1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servletDemo2</servlet-name>
        <servlet-class>com.test.project.servlet.ServletDemo2</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>servletDemo2</servlet-name>
        <url-pattern>/servletDemo2</url-pattern>
    </servlet-mapping>


</web-app>